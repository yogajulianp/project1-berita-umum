<%- include('templates/header')-%>
<h1>Daftar Produk</h1>
<p>Welcome to <%= title %></p>
<br>
<div>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama Produk</th>
            <th scope="col">Jumlah</th>
            <th scope="col">Harga</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <%products.forEach(function(item) {%>
          <tr>
            <th scope="row"><%=item.id%></th>
            <td><%=item.name%></td>
            <td><%=item.quantity%></td>
            <td><%=item.price%></td>
            <td>    
                <a href="/productdetail?id=<%=item.id%> " class="btn btn-info">Detail</a>
                &nbsp;
                <a href="/detail/<%=item.id%> " class="btn btn-info">Detail 2</a>
            </td>
          </tr>
          <%} );%>
          <tr>
            <a href="/addProduct" class="btn btn-primary">Add Produk </a>
          </tr>
        </tbody>
       
      </table>
</div>
<%- include('templates/footer') -%>

